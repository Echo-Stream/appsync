{
    "version": "2017-02-28",
    "operation": "Query",
    "query": {
        "expression": "pk = :tenant AND begins_with(sk :sk)",
        "expressionValues": {
          ":pk": $util.dynamodb.toDynamoDBJson($tenant),
          ":sk": $util.dynamodb.toDynamoDBJson("U~")
        }
    }
}

#set ($type = $ctx.info.fieldName.replace("^Put", ""))
#set ($app_sk = "A~$!{ctx.stash.app.name}")
#set ($authType_list = ["cognito", "x_account"])

#if ("$!{ctx.stash.app.authType}" == "x_account" && "$!{ctx.stash.app.account}" == "")
  $util.error("Apps with authType 'x_account' require 'account' argument")
#end
#if ("$!{ctx.stash.app.authType}" != "" and $authType_list.contains("$!{ctx.stash.app.authType}"))
  $util.error("Valid authType's are 'cognito' or 'x_account'")
#end

{
  "version" : "2017-02-28",
  "operation" : "PutItem",
  "key" : {
      "pk": $util.dynamodb.toDynamoDBJson($tenant),
      "sk": $util.dynamodb.toDynamoDBJson($app_sk)
  },
  "attributeValues" : {
	  "tenant": $util.dynamodb.toDynamoDBJson("$tenant"),
    "type": $util.dynamodb.toDynamoDBJson("$type"),
    "name": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.app.name}"),
    "description": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.app.description}"),
    "metadata": $util.dynamodb.toDynamoDBJson($!{ctx.stash.app.metadata}),
    "event_id": $util.dynamodb.toDynamoDBJson($util.autoId()),
    "config": $util.dynamodb.toDynamoDBJson($!{ctx.stash.app.config}),
    #if ("$type" == "ExternalApp")
      "authType": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.authType}"),
      #if ("$!{ctx.stash.app.authType}" == "x_account")
        "account": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.account}"),
      #end
    #elseif ("$type" == "ManagedApp")
      "authType": $util.dynamodb.toDynamoDBJson("cognito")
    #end
  },
  "condition": {
    "expression": "(attribute_not_exists(sk) AND attribute_not_exists(pk)) OR (authType = :authType AND #type = :type AND #name = :name AND account = :account AND config = :config)",
    "expressionValues": {
      ":name": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.app.name}"),
      ":authType": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.app.authType}"),
      ":type": $util.dynamodb.toDynamoDBJson("$type"),
      ":account": $util.dynamodb.toDynamoDBJson("$!{ctx.stash.app.account}"),
      ":config": $util.dynamodb.toDynamoDBJson($!{ctx.stash.app.config})
    },
    "expressionNames": {
      "#type": "type",
      "#name": "name"
    }
  }
}

#set ($tenant = "$!{ctx.identity.claims.tenant}")

{
  "version" : "2017-02-28",
  "operation" : "Query",
  "query": {
    "expression": "pk = :tenant AND sk = :target",
    "expressionValues": {
      ":target": $util.dynamodb.toDynamoDBJson("N~$!{ctx.source.target}"),
      ":tenant": $util.dynamodb.toDynamoDBJson($tenant)
    }
  },
  "limit": 1
}
